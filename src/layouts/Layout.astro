---
interface Props {
	title?: string;
}

const { title } = Astro.props;

const links = [
	{
		href: "/photos/",
		title: "Photography"
	},
	{
		href: "/resume/",
		title: "Resum√©"
	}
];
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1" />
		<!--
			Favicon provided by favicon.io and twemoji:
			https://favicon.io/emoji-favicons/cat
			https://github.com/twitter/twemoji/blob/d94f4cf793e6d5ca592aa00f58a88f6a4229ad43/assets/svg/1f408.svg
		-->
		<link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png">
		<link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png">
		<link rel="apple-touch-icon" sizes="180x180" href="/favicon-180x180.png">
		<link rel="icon" type="image/svg+xml" sizes="any" href="/favicon.svg">
		<title>{((title && title + " - ") || "") + "Rafael Sartori M. Santos"}</title>
		<meta name="generator" content={Astro.generator}>
	</head>
	<body class="dark:bg-gray-800 dark:text-slate-300">
		<div class="font-mono p-2 mb-4">
			<div class="flex justify-center align-center mb-1">
				<a href="/" class="text-lg font-bold text-balance text-center rounded-lg bg-gradient-to-br from-indigo-600 to-pink-500 hover:from-rose-400 hover:to-amber-500 transition-shadow duration-300 hover:shadow-lg text-slate-50 hover:text-white dark:text-slate-100 px-3 py-1">
					Rafael Sartori M. Santos
				</a>
			</div>
			<div class="flex flex-wrap justify-center align-center gap-y-2 gap-x-5">
				{links.map(link => <a href={link.href} class="hover:underline text-stone-600 dark:text-slate-300">{link.title}</a>)}
			</div>
		</div>
		<main class="container p-3 mx-auto">
			<div class="flex flex-row justify-center">
				<div class="size-fit">
					<slot/>
				</div>
			</div>
		</main>
	</body>
</html>
